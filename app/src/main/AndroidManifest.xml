<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spraut.tally">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.spraut.tally.UniteApp"
        android:allowBackup="true"
        android:icon="@mipmap/my_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/my_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tally">
        <activity android:name="com.spraut.tally.GuideActivity">

        </activity>
        <activity android:name="com.spraut.tally.RecordActivity" />
        <activity android:name="com.spraut.tally.HistoryActivity" />
        <activity android:name="com.spraut.tally.AboutActivity" />
        <activity android:name="com.spraut.tally.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>